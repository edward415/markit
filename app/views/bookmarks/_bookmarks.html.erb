<script src="http://cdn.embed.ly/jquery.embedly-3.1.1.min.js" type="text/javascript"></script>
<div class="row">
<% bookmarks.each do |bookmark| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
      <p><%= link_to "", [@topic, bookmark], method: :delete, class: 'glyphicon glyphicon-remove pull-right' %></p>
      <p><a href="<%= "http://#{bookmark.url}" %>" class="embedly-card" data-card-theme="light"><%= bookmark.url %> </a></p>
      <p><%= link_to "Edit", edit_topic_bookmark_path(@topic, bookmark), class: 'btn btn-success' %></p>
    </div>
  </div>
<% end %>
</div>
<script src="//cdn.embedly.com/widgets/platform.js"></script>