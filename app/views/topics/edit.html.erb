<div class="container">
  <div class="col-md-4">
    <h1>Edit Topic</h1>
    <p>You Can edit your topic here.</p>
  </div>
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label "Topic Name" %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter a name for your topic!' %>
      </div>
      <%= f.submit "Save" %>
    <% end %>
  </div>
</div>
