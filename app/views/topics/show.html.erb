<div class="container">
  <h2><%= @topic.title %> 
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success pull-right' %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger pull-right', data: {confirm: 'Are you sure you want to delete this topic?'} %></h2>
  <h3><%= link_to "", new_topic_bookmark_path(@topic), class: 'glyphicon glyphicon-plus' %></h3>
  <%= render partial: 'bookmarks/bookmark', locals: {bookmarks: @bookmarks, topic: @topic, bookmark: @bookmark}  %>
  <%= will_paginate @bookmarks %>
</div>
