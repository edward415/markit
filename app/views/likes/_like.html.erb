<div>
  <% if like = current_user.liked(bookmark) %>
    <%= link_to [bookmark.topic, bookmark, like], class: 'btn btn-danger', method: :delete do %>
      <i class="glyphicon glyphicon-heart-empty"> </i>&nbsp; Unlike
    <% end %>
  <% else %>
    <%= link_to [bookmark.topic,bookmark, Like.new], class: 'btn btn-primary', method: :post do %>
      <i class="glyphicon glyphicon-heart"> </i>&nbsp; Like
    <% end %>
  <% end %>
</div>